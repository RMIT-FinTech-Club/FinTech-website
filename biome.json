{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"files": {
		"ignore": [".next"],
		"include": [
			"./app/**/*.ts",
			"./app/**/*.tsx",
			"./components/**/*.ts",
			"./components/**/*.tsx",
			"./__test__/**/*.test.ts"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["camelCase", "export"]
					}
				},
				"useNamingConvention": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	}
}
